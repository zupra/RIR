.pulse {
  background: #2D71F7;
  border-radius: 50%;
  box-shadow: 0 0 0 0 rgba(0, 0, 0, 1);
  margin: 10px;
  height: 20px;
  width: 20px;
  transform: scale(1);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(#2D71F7, 0.7);
  }

  70% {
    transform: scale(1);
    box-shadow: 0 0 0 10px rgba(#2D71F7, 0);
  }

  100% {
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba(#2D71F7, 0);
  }
}

.MAP_img {
  position: relative;
  top: -100px;
  z-index: -1;
}

.MAP {
  // background: url('~static/img/map.png') no-repeat;
  position: relative;
}

.pulse {
  position: absolute;

  &:nth-of-type(1) {
    left: 50%;
    top: 50%;
  }

  &:nth-of-type(2) {
    left: 40%;
    top: 52%;
  }

  &:nth-of-type(3) {
    left: 26%;
    top: 44%;
  }

  &:nth-of-type(4) {
    left: 22%;
    top: 52%;
  }

  &:nth-of-type(5) {
    left: 27%;
    top: 54%;
  }

  &:nth-of-type(6) {
    left: 31%;
    top: 56%;
  }
}
