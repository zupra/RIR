.pulse
  position: absolute;

  &:nth-of-type(1)
    left: 50%;
    top: 50%;

  &:nth-of-type(2)
    left: 40%;
    top: 52%;

  &:nth-of-type(3)
    left: 26%;
    top: 44%;

  &:nth-of-type(4)
    left: 22%;
    top: 52%;

  &:nth-of-type(5)
    left: 27%;
    top: 54%;

  &:nth-of-type(6)
    left: 31%;
    top: 56%;
