.pulse
  circle(20px);
  background: $blue_l;
  box-shadow: 0 0 0 0 rgba(0, 0, 0, 1);
  margin: 10px;
  transform: scale(1);
  animation: pulse 1s infinite;

@keyframes pulse
  0%
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba($blue_l, 0.7);

  70%
    transform: scale(1);
    box-shadow: 0 0 0 10px rgba($blue_l, 0);

  100%
    transform: scale(0.95);
    box-shadow: 0 0 0 0 rgba($blue_l, 0);

.MAP_img
  position: relative;
  top: -100px;
  z-index: -1;

